alias ..='cd ..'
alias ls='ls --color=auto'

# Mac version of 'ls' using coreutils
# alias ls='gls --color=auto'

alias exeunt='killall tmux'
alias ll='ls -l'
alias qq='exit'
alias resource='source ~/.bashrc'
alias tunnel='ngrok start'
alias vi='vim'

# correct errors in usage

alias ifconfig=_ifconfig
alias mvim=_mvim

_ifconfig() {
  echo 'Use ip, you asshole'
}

_mvim() {
  echo 'Use gvim, stupid'
}

# Git

alias g='echo git'
alias ga='git add'
alias gaa='git add .'
alias gb='git branch'
alias gc='git commit'
alias gclean="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gdw='git diff --color-words'
alias gf='git fetch'
alias gl="git log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'"
alias gm='git merge'
alias gp='git push'
alias gs='clear; git status'
alias gu='git pull'
alias stash='git stash'

# Heroku toolkit

alias hr='heroku'
alias hrc='heroku run console'
alias hrl='heroku logs -t'

# Ruby

alias be='bundle exec'
alias bip='bundle install --path vendor/bundle -j4'

alias rrh='rbenv rehash'

# Rails

alias dbreset='be rake db:drop:all db:create:all db:setup db:test:clone'
alias dbfullreset='be rake db:drop:all db:create:all db:migrate db:seed db:test:clone'
alias fm='bundle exec foreman start'
alias migrate='be rake db:migrate db:test:clone'
alias rlc='rails console'
alias rlg='rails generate'
alias rls='rails server'

# Misc

redis() {
  [[ ! -f $(which redis-cli) ]] && echo "Redis not installed!" && return 1
  redis-cli $*
}
