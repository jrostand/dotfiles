alias ..='cd ..'
alias grep='grep --color=auto'

if [[ $(uname) = 'Darwin' ]]; then
  alias ls='gls --color=auto'
else
  alias ls='ls --color=auto'

  alias ifconfig=echo 'I think you meant ip'
fi

alias docker='sudo docker'
alias exeunt='killall tmux'
alias ll='ls -lh'
alias qq='exit'
alias resource='source ~/.bashrc'
alias tunnel='ngrok start'

if [[ $(which nvim) ]]; then
  alias vi='nvim'

  alias gvim=echo "Not with nvim, you don't"
else
  alias vi='vim'
fi

# Git

alias g='echo git'
alias ga='git add'
alias gaa='git add .'
alias gb='git branch'
alias gc='git commit'
alias gclean="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gco='git checkout'
alias gd='git diff'
alias gds='git diff --staged'
alias gdw='git diff --color-words'
alias gf='git fetch'
alias gl="git log --graph --all --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'"
alias gm='git merge'
alias gp='git push'
alias gs='clear; git status'
alias gu='git pull'
alias stash='git stash'

# Ruby

alias be='bundle exec'
alias bip='bundle install --path vendor/bundle -j4'

# Misc

redis() {
  [[ ! -f $(which redis-cli) ]] && echo "Redis not installed!" && return 1
  redis-cli $*
}
