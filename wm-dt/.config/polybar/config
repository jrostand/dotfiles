[bar/center]
monitor = DP-0
fixed-center = true
height = 30
padding = 1
module-margin = 1
font-0 = "Hack Nerd Font:pixelsize=12:weight=bold;0"
background = ${colors.bg}
foreground = ${colors.fg}
modules-left = i3center
modules-right = localdate localtime utctime

[bar/left]
monitor = DP-2
fixed-center = true
height = 30
padding = 1
module-margin = 1
font-0 = "Hack Nerd Font:pixelsize=12:weight=bold;0"
background = ${colors.bg}
foreground = ${colors.fg}
modules-left = i3left
modules-center = nowplaying
